generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  email     String       @unique
  username  String       @unique
  password  String
  createdAt DateTime     @default(now())
  profile   UserProfile?
}

model UserProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  age       Int
  sex       String
  height_cm Float
  weight_kg Float
  notes     String? // puedes guardar texto libre aqu√≠ sobre condiciones si se desea
  createdAt DateTime @default(now())
}
